package templates

import (
	"github.com/jackjf28/resume-website/middleware"
	"os"
)

templ header(title string) {
	<head>
		<title>{ title }</title>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<script src="/static/script/htmx.min.js" nonce={ middleware.GetHtmxNonce(ctx) }></script>
		<script defer src="/static/script/alpine.min.js" nonce={ middleware.GetAlpineNonce(ctx) }></script>
		//<script src="/static/script/response-targets.js" nonce={ middleware.GetResponseTargetsNonce(ctx) }></script>
		if os.Getenv("env") == "production" {
			<link rel="stylesheet" href="/static/css/style.min.css" nonce={ middleware.GetTwNonce(ctx) }/>
		} else {
			<link rel="stylesheet" href="/static/css/style.css" nonce={ middleware.GetTwNonce(ctx) }/>
		}
	</head>
}

templ nav(currentPath string) {
	<nav
		class="relative bg-gray-800 dark:bg-gray-800/75 dark:after:pointer-events-none dark:after:absolute dark:after:inset-x-0 dark:after:bottom-0 dark:after:h-px dark:after:bg-white/10 z-10"
	>
		<div class="max-w-7xl px-2 sm:px-6 lg:px-8">
			<div class="relative flex h-16 items-center justify-between">
				<div class="flex flex-1 items-center justify-between sm:items-stretch">
					<div class="hidden sm:block">
						<div class="flex space-x-4">
							<a
								href="/home"
								class={"dark:bg-gray-600 hover:bg-gray-500 rounded-lg p-2 transition",
								templ.KV("bg-gray-900 dark:bg-gray-950/75 text-white", currentPath == "/home"),
								templ.KV("text-gray-300 hover:bg-white/5 hover:text-white", currentPath != "/home")
								}
							>Home</a>
							<a
								href="/test"
								class={"dark:bg-gray-600 hover:bg-gray-500 rounded-lg p-2 transition",
								templ.KV("bg-gray-900 dark:bg-gray-950/75 text-white", currentPath == "/test"),
								templ.KV("text-gray-300 hover:bg-gray-500 hover:text-white", currentPath != "/test")
								}
							>Test</a>
						</div>
					</div>
					<span class="flex justify-center">
						<button
						hx-get="/resume"
						hx-target="#modal-container"
						type="button"
						class="text-gray-300 ml-4 p-2 dark:bg-gray-600 hover:bg-gray-500 hover:text-white rounded-lg transition"
						>Resume</button>
					</span>
				</div>
			</div>
		</div>
	</nav>
}

templ footer() {
	<footer class="bg-gray-800 dark:bg-gray-800/50 p-4">
		<p class="text-sm font-medium text-gray-300">
			Â© 2025 Jack Farrell
		</p>
	</footer>
}

templ Layout(contents templ.Component, title string, currentPath string) {
	@header(title)
	<body class="flex flex-col min-h-screen bg-gray-100 dark:bg-gray-900">
		@nav(currentPath)
		<main class="flex-1 container">
			@contents
		</main>
		@footer()
	</body>
}
